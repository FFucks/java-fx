<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ffucks.controller.ContactController">

    <top>
        <VBox spacing="10" styleClass="form-container">
            <TextField fx:id="nameField" promptText="Name"/>
            <TextField fx:id="phoneField" promptText="Phone"/>
            <TextField fx:id="emailField" promptText="Email"/>

            <HBox spacing="10">
                <Button text="Save" onAction="#saveContact"/>
                <Button text="Delete" onAction="#deleteContact"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="table">

            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="phoneColumn" text="Phone"/>
                <TableColumn fx:id="emailColumn" text="Email"/>
            </columns>

        </TableView>
    </center>

</BorderPane>